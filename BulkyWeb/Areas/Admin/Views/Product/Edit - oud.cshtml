@model Product;

<div class="shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">


                @* -------------------------------------------------- *@
                @* VALIDATIE ERRORS *@
                @* Toont ALLE errors *@
                <div asp-validation-summary="All" class="text-danger"></div>

                @* Toont ENKEL de errors gebonden aan de model-properties *@
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@

                @* Toont GEEN errors *@
                @* <div asp-validation-summary="None" class="text-danger"></div> *@

                @* -------------------------------------------------- *@
                @* Onderstaand inputveld is normaal nodig (indien het voor iets anders is dan "ID")
                - Omdat het nodig is om een geldig object door te sturen
                --- Anders zal ModelState invalid zijn

                - Enkel omdat het hier een property-naam "id" heeft, wordt het automatisch gemapped
                --- en is onderstaande inputsveld met prop "hidden" niet nodig

                - Owv consistentie staat het effectief genoteerd (en niet uit-gecommentaard)
                *@
                <input asp-for="Id" hidden>

                @* -------------------- *@
                @* InputVelden *@
                @* De input-velden worden automatisch gemapped en ingevuld owv de asp-tag-helpers *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow">
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow">
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow">
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow">
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow">
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow">
                    <label asp-for="Price50" class="ms-2"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow">
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                @* -------------------------------------------------- *@
                @* Knoppen *@
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @* Ik veronderstel dat MVC de "Edit" actionMethod kiest op basis van de view-naam *@
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index"
                           class="btn btn-outline-secondary border form-control">Back toList</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* -------------------------------------------------- *@
@* Validatie Scripts *@
@* Hieronder is een combinatie van "Section" en "Partial View"
- De section wordt ingeladen in de _Layout template (onderaan)
- De partial view met naam _ValidationScriptsPartial wordt hier ingeladen via de helper-tag <partial name="xxx" />
*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}