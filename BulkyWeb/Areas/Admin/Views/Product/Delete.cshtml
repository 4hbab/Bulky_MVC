@model Product;

<div class="shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 mt-4">
                <div asp-validation-summary="All" class="text-danger"></div>

                @* -------------------------------------------------- *@
                @* InputVelden *@
                <input asp-for="Id" hidden>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" disabled>
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow" disabled></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" disabled>
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" disabled>
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" disabled>
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" disabled>
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow" disabled>
                    <label asp-for="Price50" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow" disabled>
                    <label asp-for="Price100" class="ms-2"></label>
                </div>

                @* -------------------------------------------------- *@
                @* Knoppen *@
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @* Ik veronderstel dat MVC de "Delete" actionMethod kiest op basis van de view-naam *@
                        <button type="submit" class="btn btn-danger form-control">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-danger border form-control">
                            Back toList
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* -------------------------------------------------- *@
@* Validatie Scripts *@
@* # Voor Client Side Validation *@
@* # Hieronder is een combinatie van "Section" en "Partial View"
- De section wordt ingeladen in de _Layout template (onderaan)
- De partial view met naam _ValidationScriptsPartial wordt hier ingeladen via de helper-tag <partial name="xxx" />

- In de _Layout werd ook een (andere) toepassing van Partial-View toegepast
*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}