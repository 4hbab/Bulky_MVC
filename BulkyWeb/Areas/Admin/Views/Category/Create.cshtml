@model Category;

<div class="shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 mt-4">
                @* Toont ALLE errors *@
                <div asp-validation-summary="All" class="text-danger"></div>

                @* Toont ENKEL de errors gebonden aan de model-properties *@
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@

                @* Toont GEEN errors *@
                @* <div asp-validation-summary="None" class="text-danger"></div> *@

                @* -------------------------------------------------- *@
                @* InputVelden *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow">
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow">
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                @* -------------------------------------------------- *@
                @* Knoppen *@
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index"
                           class="btn btn-outline-primary border form-control">Back toList</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* -------------------------------------------------- *@
@* Validatie Scripts *@
@* Hieronder is een combinatie van "Section" en "Partial View"
- De section wordt ingeladen in de _Layout template (onderaan)
- De partial view met naam _ValidationScriptsPartial wordt hier ingeladen via de helper-tag <partial name="xxx" />

- In de _Layout werd ook een toepassing van Partial-View toegepast
*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}